$TTL    604800
@       IN      SOA     ocp-svc.ocp.local. contact.ocp.local (
                 22     ; Serial
             604800     ; Refresh
              86400     ; Retry
            2419200     ; Expire
             604800     ; Minimum
)
        IN      NS      ocp-svc

ocp-svc.ocp.local.                      IN      A        10.1.10.1
podman.ocp.local.                       IN      A        10.1.10.1

; Temp Bootstrap Node
